@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Beranda";
    var namaUser = Context.Session.GetString("nama") ?? "Rekan ONEDB";
    var company = Context.Session.GetString("company") ?? "Seluruh Unit";
}

<div class="home-shell">
    <div class="glow-orb orb-a"></div>
    <div class="glow-orb orb-b"></div>
    <div class="glow-orb orb-c"></div>

    <div class="home-hero card-glass">
        <div class="hero-copy reveal">
            <p class="eyebrow">ONEDB Evolution - @company</p>
            <h1>Halo, @namaUser<span class="spark">*</span></h1>
            <p class="lede">
                Dasbor terkini untuk memantau kinerja, SDM, dan perjalanan. Semuanya dikemas
                dalam antarmuka yang ringan, responsif, dan penuh animasi.
            </p>
            <div class="hero-actions">
                <a class="btn primary" href='@Url.Action("Index", "MenuUtama")'>Mulai Dashboard</a>
                <a class="btn ghost" href="#insights">Jelajahi Insight</a>
            </div>
            <div class="hero-metrics">
                <div class="metric-pill">
                    <span class="label">Roster Aktif</span>
                    <span class="value stat-number" data-target="128">0</span>
                </div>
                <div class="metric-pill">
                    <span class="label">Travel Hari Ini</span>
                    <span class="value stat-number" data-target="24">0</span>
                </div>
                <div class="metric-pill">
                    <span class="label">Mitra Terverifikasi</span>
                    <span class="value stat-number" data-target="62">0</span>
                </div>
            </div>

            <div class="presence live-card reveal">
                <div class="presence-left">
                    <div class="pulse-dot"></div>
                    <div>
                        <p class="eyebrow">Live Presence</p>
                        <h3><span id="liveUsers" class="live-number">000</span> orang sedang mengakses</h3>
                        <p class="mini">Telemetry realtime dengan pembaruan periodik.</p>
                    </div>
                </div>
                <div class="presence-trail">
                    <span></span><span></span><span></span><span></span><span></span>
                </div>
            </div>
        </div>

        <div class="hero-visual reveal">
            <div class="floating-card">
                <div class="badge-soft badge-green">Realtime</div>
                <div class="card-title">Health & Safety</div>
                <div class="chart-pulse">
                    <span class="bar bar-1"></span>
                    <span class="bar bar-2"></span>
                    <span class="bar bar-3"></span>
                    <span class="bar bar-4"></span>
                    <span class="bar bar-5"></span>
                </div>
                <p class="mini">Kepatuhan dan mitigasi risiko terpantau otomatis.</p>
            </div>

            <div class="floating-card alt">
                <div class="badge-soft badge-blue">Productivity</div>
                <div class="progress-line">
                    <span class="progress-fill"></span>
                </div>
                <div class="pill-stack">
                    <span class="pill">Karyawan</span>
                    <span class="pill">Travel</span>
                    <span class="pill">Roster</span>
                    <span class="pill">Pengajuan</span>
                </div>
                <p class="mini">Integrasi lintas modul untuk keputusan yang lebih cepat.</p>
            </div>
        </div>
    </div>

    <div id="insights" class="feature-grid">
        <div class="feature-card reveal">
            <div class="feature-icon">
                <i class="fas fa-bolt"></i>
            </div>
            <div>
                <h3>Snapshot Cepat</h3>
                <p>Ringkasan aktivitas harian, alert, dan progres target dalam satu layar.</p>
            </div>
        </div>
        <div class="feature-card reveal">
            <div class="feature-icon">
                <i class="fas fa-route"></i>
            </div>
            <div>
                <h3>Travel Orchestrator</h3>
                <p>Kelola itinerary, approval, dan compliance perjalanan tanpa berpindah tab.</p>
            </div>
        </div>
        <div class="feature-card reveal">
            <div class="feature-icon">
                <i class="fas fa-users-cog"></i>
            </div>
            <div>
                <h3>Roster Intelligence</h3>
                <p>Prediksi kebutuhan tim, susun jadwal, dan pantau mitigasi overtime.</p>
            </div>
        </div>
        <div class="feature-card reveal">
            <div class="feature-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div>
                <h3>Governance</h3>
                <p>Kontrol akses, audit trail, dan status kepatuhan yang selalu up-to-date.</p>
            </div>
        </div>
    </div>

    <div class="split-panels">
        <div class="panel card-glass reveal">
            <div class="panel-header">
                <div>
                    <p class="eyebrow">Realtime Pulse</p>
                    <h3>Performa Operasional</h3>
                </div>
                <span class="badge-soft badge-blue">Live</span>
            </div>
            <div class="pulse-grid">
                <div class="pulse">
                    <span class="dot dot-green"></span>
                    <p>Onboarding selesai</p>
                    <strong class="stat-number" data-target="86">0</strong>
                </div>
                <div class="pulse">
                    <span class="dot dot-orange"></span>
                    <p>Approval tertunda</p>
                    <strong class="stat-number" data-target="14">0</strong>
                </div>
                <div class="pulse">
                    <span class="dot dot-blue"></span>
                    <p>Travel aktif</p>
                    <strong class="stat-number" data-target="9">0</strong>
                </div>
                <div class="pulse">
                    <span class="dot dot-purple"></span>
                    <p>Ticket support</p>
                    <strong class="stat-number" data-target="5">0</strong>
                </div>
            </div>
        </div>

        <div class="panel card-glass reveal">
            <div class="panel-header">
                <div>
                    <p class="eyebrow">Shortcut</p>
                    <h3>Aksi Kilat</h3>
                </div>
                <span class="badge-soft badge-green">Preferred</span>
            </div>
            <div class="action-list">
                <a class="action-item" href='@Url.Action("Index", "Karyawan")'>
                    <div class="icon-wrap"><i class="fas fa-user-plus"></i></div>
                    <div>
                        <p>Input Karyawan</p>
                        <small>Tambah atau update profil karyawan.</small>
                    </div>
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a class="action-item" href='@Url.Action("Index", "Travel")'>
                    <div class="icon-wrap"><i class="fas fa-plane-departure"></i></div>
                    <div>
                        <p>Kelola Travel</p>
                        <small>Atur keberangkatan dan approval lebih cepat.</small>
                    </div>
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a class="action-item" href='@Url.Action("Index", "Roster")'>
                    <div class="icon-wrap"><i class="fas fa-calendar-check"></i></div>
                    <div>
                        <p>Monitoring Roster</p>
                        <small>Sinkronisasi jadwal dan kehadiran tim.</small>
                    </div>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section styles {
    <style>
        .home-shell {
            position: relative;
            overflow: hidden;
            padding: 32px 12px 40px;
            background: linear-gradient(140deg, #0f172a 0%, #0b1024 40%, #0a1b3a 100%);
        }

        .card-glass {
            background: rgba(255, 255, 255, 0.82);
            backdrop-filter: blur(14px);
            border: 1px solid rgba(255, 255, 255, 0.65);
            border-radius: 18px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.25), 0 10px 30px rgba(59, 130, 246, 0.15);
        }

        .home-hero {
            display: grid;
            grid-template-columns: 1.1fr 0.9fr;
            gap: 36px;
            padding: 28px;
            margin-bottom: 28px;
            position: relative;
            background: radial-gradient(circle at 10% 10%, rgba(99, 102, 241, 0.18), transparent 30%),
                        radial-gradient(circle at 80% 20%, rgba(16, 185, 129, 0.12), transparent 28%),
                        radial-gradient(circle at 30% 80%, rgba(59, 130, 246, 0.18), transparent 30%),
                        rgba(255, 255, 255, 0.82);
        }

        .eyebrow {
            letter-spacing: 0.08em;
            text-transform: uppercase;
            color: #6b7280;
            font-weight: 600;
            margin-bottom: 6px;
            font-size: 0.78rem;
        }

        .hero-copy h1 {
            font-size: 2.35rem;
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 12px;
            line-height: 1.2;
        }

        .hero-copy h1 .spark {
            color: #6366f1;
            font-size: 1.5rem;
            animation: float 4s ease-in-out infinite;
            display: inline-block;
            margin-left: 6px;
        }

        .lede {
            color: #4b5563;
            margin-bottom: 18px;
            max-width: 630px;
            line-height: 1.6;
        }

        .hero-actions {
            display: flex;
            gap: 12px;
            margin-bottom: 16px;
        }

        .btn.primary {
            background: linear-gradient(135deg, #6366f1, #10b981);
            border: none;
            color: #fff;
            padding: 12px 18px;
            border-radius: 12px;
            font-weight: 600;
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.35);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .btn.primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 32px rgba(99, 102, 241, 0.45);
        }

        .btn.ghost {
            border: 1px solid rgba(99, 102, 241, 0.35);
            color: #374151;
            padding: 12px 18px;
            border-radius: 12px;
            font-weight: 600;
            background: rgba(99, 102, 241, 0.06);
            transition: transform 0.2s ease, border-color 0.2s ease;
        }

