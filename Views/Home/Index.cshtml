        .orb-b { width: 180px; height: 180px; background: #a5f3fc; bottom: 0; left: -60px; }
        .orb-c { width: 160px; height: 160px; background: #bbf7d0; bottom: 10%; right: 4%; animation-delay: 1.5s; }

