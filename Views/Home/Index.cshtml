                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 640px) {
            .hero-copy h1 {
                font-size: 1.9rem;
            }

            .hero-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .home-shell {
                padding: 22px 8px 30px;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Counter animation
            const counters = document.querySelectorAll('.stat-number');
            const speed = 32;
            const liveUsersEl = document.getElementById('liveUsers');

            const animateCount = (el) => {
                const target = +el.getAttribute('data-target') || 0;
                const increment = Math.max(1, Math.ceil(target / speed));
                const update = () => {
                    const current = +el.innerText.replace(/,/g, '');
                    if (current < target) {
                        const next = Math.min(target, current + increment);
                        el.innerText = next.toLocaleString();
                        requestAnimationFrame(update);
                    } else {
                        el.innerText = target.toLocaleString();
                    }
                };
                update();
            };

            const revealables = document.querySelectorAll('.reveal');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        if (entry.target.classList.contains('hero-copy')) {
                            counters.forEach(animateCount);
                        }
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.18 });

            revealables.forEach(el => observer.observe(el));

            // Simulasi live presence (random smoothing)
            const updateLiveUsers = () => {
                if (!liveUsersEl) return;
                const current = parseInt(liveUsersEl.textContent || '0', 10) || 0;
                const base = current || 420;
                const swing = Math.floor(Math.random() * 26) - 12; // -12..13
                const nextVal = Math.min(680, Math.max(180, base + swing));
                liveUsersEl.textContent = nextVal.toString().padStart(3, '0');
            };
            updateLiveUsers();
            setInterval(updateLiveUsers, 7000);
        });
    </script>
}
