        .bar-3 { animation-delay: 0.24s; height: 52px; }
        .bar-4 { animation-delay: 0.36s; height: 64px; }
        .bar-5 { animation-delay: 0.48s; height: 56px; }

        .mini {
            color: #4b5563;
            margin: 0;
            font-size: 0.9rem;
        }

        .progress-line {
            width: 100%;
