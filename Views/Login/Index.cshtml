@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OneDB Evolution - Modern Login</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- INJEKSI CSS BARU (YANG ANDA BERIKAN) + PERBAIKAN -->
    <style>
        /* --- CSS Variables for easy theming --- */
        :root {
            --primary-glow: #00d2ff;
            --secondary-glow: #3a7bd5;
            --background-start: #000428;
            --glass-bg: rgba(10, 20, 50, 0.25);
            --glass-border: rgba(255, 255, 255, 0.15);
            --text-primary: #ffffff;
            --text-secondary: #cccccc;
            --error-bg: #e74c3c;
        }

        /* --- Base Setup --- */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            color: var(--text-primary);
            background-color: var(--background-start); /* Fallback color */
        }

        /* --- Video Background --- */
        #bg-video {
            position: fixed;
            right: 0;
            bottom: 0;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -1; /* Place it behind all content */
            filter: brightness(0.6); /* Darken the video slightly */
        }

        /* --- [BARU] Splash Screen --- */
        .splash-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            /* [EDIT] Background diubah menjadi transparan */
            background: transparent;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 10000;
            transition: opacity 0.8s ease-out;
        }

        .splash-content {
            text-align: center;
            animation: splashTextPulse 2.8s ease-in-out forwards;
        }

        .splash-content h1 {
            /* [EDIT] Font size diperbesar */
            font-size: 3.5rem; 
            font-weight: 700;
            margin: 0;
            background: linear-gradient(45deg, var(--primary-glow), var(--secondary-glow));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .splash-content h2 {
            /* [EDIT] Font size diperbesar */
            font-size: 1.5rem;
            font-weight: 300;
            letter-spacing: 2px;
            color: var(--text-secondary);
        }

        /* Animasi teks splash: fade in, hold, fade out */
        @@keyframes splashTextPulse {
            0% {
                opacity: 0;
                transform: scale(0.9);
            }
            30% {
                opacity: 1;
                transform: scale(1);
                text-shadow: 0 0 15px var(--primary-glow);
            }
            80% {
                opacity: 1;
                transform: scale(1);
                text-shadow: 0 0 15px var(--primary-glow);
            }
            100% {
                opacity: 0;
                transform: scale(0.9);
            }
        }

        /* Class untuk menyembunyikan splash screen */
        .splash-screen.hidden {
            opacity: 0;
            pointer-events: none;
        }


        /* --- Login Container & Glassmorphism Effect --- */
        .login-container {
            width: 400px;
            max-width: 90%; /* Responsif */
            padding: 40px 35px;
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid var(--glass-border);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease;
            position: relative;
            z-index: 1;
            /* [EDIT] Mulai tersembunyi. Animasi dipindah ke class .visible */
            opacity: 0; 
        }

        /* [BARU] Class untuk memicu animasi login */
        .login-container.visible {
            opacity: 1;
            animation: fadeInScaleUp 1s cubic-bezier(0.165, 0.84, 0.44, 1) forwards, pulsatingGlow 4s ease-in-out infinite 1s;
        }


        @@keyframes pulsatingGlow {
            0%, 100% {
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5), 0 0 15px rgba(0, 210, 255, 0.3);
            }

            50% {
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.6), 0 0 30px rgba(0, 210, 255, 0.6);
            }
        }

        /* --- Entrance Animation --- */
        @@keyframes fadeInScaleUp {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* [EDIT] Animasi anak dipicu oleh class .visible dari parent */
        .login-container.visible > * {
            animation: slideUpFadeIn 0.8s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
            opacity: 0;
        }

        .login-container.visible .login-header {
            animation-delay: 0.2s;
        }

        .login-container.visible .input-group:nth-of-type(1) {
            animation-delay: 0.3s;
        }

        .login-container.visible .input-group:nth-of-type(2) {
            animation-delay: 0.4s;
        }

        .login-container.visible .input-group:nth-of-type(3) {
            animation-delay: 0.5s;
        }

        .login-container.visible .btn {
            animation-delay: 0.6s;
        }

        .login-container.visible .login-footer {
            animation-delay: 0.7s;
        }

        @@keyframes slideUpFadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* --- Header --- */
        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0;
            background: linear-gradient(45deg, var(--primary-glow), var(--secondary-glow));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .login-header h2 {
            font-size: 1.2rem;
            font-weight: 300;
            letter-spacing: 2px;
            color: var(--text-secondary);
        }

        /* --- Input Fields & Icons --- */
        .input-group {
            position: relative;
            margin-bottom: 25px;
        }

        .input-group .icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
            transition: color 0.3s ease, text-shadow 0.3s ease;
        }

        .input-group .toggle-password {
            right: 15px;
            left: auto;
            cursor: pointer;
        }

        .form-control {
            width: 100%;
            padding: 14px 14px 14px 50px;
            background: transparent;
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            color: var(--text-primary);
            font-size: 1rem;
            transition: background 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
            appearance: none;
            -webkit-appearance: none;
        }

        .input-group select.form-control {
            background-image: url("data:image/svg+xml;charset=UTF8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23cccccc' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 1rem center;
            background-size: 1em;
            padding-right: 2.5rem;
        }


        select.form-control option {
            color: #000;
            background-color: #fff;
        }

        .form-control::placeholder {
            color: var(--text-secondary);
        }

        .form-control:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.1);
            border-color: var(--primary-glow);
            box-shadow: 0 0 15px rgba(0, 210, 255, 0.5), 0 0 25px rgba(0, 210, 255, 0.3);
        }

        .form-control:focus ~ .icon {
            color: var(--primary-glow);
            text-shadow: 0 0 10px var(--primary-glow);
        }

        /* --- Login Button --- */
        .btn {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 10px;
            background: linear-gradient(45deg, var(--secondary-glow), var(--primary-glow));
            color: white;
            font-weight: 600;
            font-size: 1.1rem;
            cursor: pointer;
            text-align: center;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

        .btn span {
            position: relative;
            z-index: 2;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, var(--primary-glow), var(--secondary-glow));
            transition: opacity 0.3s ease;
            z-index: 1;
            opacity: 0;
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 210, 255, 0.4);
        }

        .btn:hover::before {
            opacity: 1;
        }

        .btn:disabled {
            background: #555;
            cursor: not-allowed;
            opacity: 0.7;
            transform: none;
            box-shadow: none;
        }

        .btn.loading {
            cursor: wait;
        }

        /* --- Footer --- */
        .login-footer {
            margin-top: 25px;
            text-align: center;
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

        /* --- Custom Notification --- */
        .notification {
            position: fixed;
            bottom: -100px;
            left: 50%;
            transform: translateX(-50%);
            padding: 15px 25px;
            background-color: var(--error-bg);
            color: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            font-weight: 500;
            z-index: 9999;
            transition: bottom 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55);
        }

        .notification.show {
            bottom: 30px;
        }

        /* --- Responsive Design --- */
        @@media (max-width: 450px) {
            .login-container {
                width: 90%;
                padding: 30px 25px;
            }

            .login-header h1 {
                font-size: 2rem;
            }

            .login-header h2 {
                font-size: 1rem;
            }
        }

        /* --- PERBAIKAN: Animasi "Shake" (Ditambahkan kembali) --- */
        @@keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }

            10%, 30%, 50%, 70%, 90% {
                transform: translateX(-8px);
            }

            20%, 40%, 60%, 80% {
                transform: translateX(8px);
            }
        }

        .shake {
            animation: shake 0.5s ease-in-out;
        }
    </style>
    <!-- AKHIR DARI INJEKSI CSS -->

</head>

<body>
    <!-- Background Video -->
    <video autoplay muted loop id="bg-video">
        <source src="video/login.mp4" type="video/mp4">
        Browser Anda tidak mendukung video.
    </video>

    <!-- [BARU] Splash Screen -->
    <div class="splash-screen" id="splashScreen">
        <div class="splash-content">
            <h1>WELCOME</h1>
            <h2>ONEDB EVOLUTION</h2>
        </div>
    </div>

    <div class="login-container">
        <div class="login-header">
            <h2>OneDB Evolution</h2>
            <h1>Welcome</h1>
        </div>

        <form class="user" id="formBS">
            <div class="input-group">
                <i class="fas fa-user icon"></i>
                <input type="text" class="form-control" id="nik" name="nik" placeholder="Masukkan NIK" required>
            </div>
            <div class="input-group">
                <i class="fas fa-lock icon"></i>
                <input type="password" class="form-control" id="password" name="password" placeholder="Masukkan Password" required>
                <i class="fas fa-eye icon toggle-password" id="togglePassword"></i>
            </div>
            <div class="input-group">
                <i class="fas fa-users icon"></i>
                <select class="form-control" id="kategori_user_id" name="kategori_user_id">
                    <option value="">- Pilih kategori user -</option>
                </select>
            </div>

            <button id="login" type="submit" class="btn">
                <span>Login</span>
            </button>
        </form>

        <footer class="login-footer">
            <p>&copy; <span id="currentYear"></span> System Integrations - With ❤️ <span id="version">1.1</span></p>
        </footer>
    </div>

    <div id="customNotification" class="notification"></div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            // --- [BARU] Logika Splash Screen ---
            const splashScreen = document.getElementById('splashScreen');
            const loginContainer = document.querySelector('.login-container');

            // Atur waktu (dalam md) agar sesuai dengan durasi animasi splashTextPulse (2800ms)
            const splashDuration = 2800; 

            setTimeout(() => {
                // 1. Sembunyikan splash screen
                if (splashScreen) {
                    splashScreen.classList.add('hidden');
                }
                
                // 2. Tampilkan login container (ini akan memicu animasinya)
                if (loginContainer) {
                    loginContainer.classList.add('visible');
                }

                // 3. Hapus splash screen dari DOM setelah transisi fade-out selesai
                setTimeout(() => {
                    if (splashScreen) {
                        splashScreen.remove();
                    }
                }, 800); // 800ms = durasi transisi opacity di CSS
            }, splashDuration);
            // --- Akhir Logika Splash Screen ---


            // Footer tahun
            document.getElementById('currentYear').textContent = new Date().getFullYear();

            const form = document.getElementById('formBS');
            const passwordInput = document.getElementById('password');
            const categorySelect = document.getElementById('kategori_user_id');
            const loginButton = document.getElementById('login');
            const togglePassword = document.getElementById('togglePassword');
            // const loginContainer = document.querySelector('.login-container'); // Sudah dideklarasi di atas
            const notification = document.getElementById('customNotification');

            // Toggle password visibility
            togglePassword.addEventListener('click', function () {
                this.classList.toggle('fa-eye');
                this.classList.toggle('fa-eye-slash');
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
            });

            // Notifikasi custom
            let notificationTimeout;
            function showNotification(message, duration = 3000) {
                clearTimeout(notificationTimeout);
                notification.textContent = message;
                notification.classList.add('show');
                notificationTimeout = setTimeout(() => {
                    notification.classList.remove('show');
                }, duration);
            }

            function setButtonLoading(isLoading, text = 'Login') {
                if (isLoading) {
                    loginButton.disabled = true;
                    // Teks diubah oleh JS
                    loginButton.querySelector('span').textContent = 'Loading...';
                    loginButton.classList.add('loading');
                } else {
                    loginButton.disabled = false;
                    loginButton.querySelector('span').textContent = text;
                    loginButton.classList.remove('loading');
                }
            }

            // === Proses Login ===
            async function btnLogin(event) {
                if (event) event.preventDefault();
                setButtonLoading(true);

                const formData = new FormData(form);

                try {
                    const response = await fetch('/Login/ProsesLogin', {
                        method: 'POST',
                        body: formData
                    });

                    if (!response.ok) throw new Error(`HTTP error: ${response.status}`);
                    const data = await response.json();

                    if (data.status) {
                        // Kosongkan dropdown kategori kecuali placeholder
                        while (categorySelect.options.length > 1) {
                            categorySelect.remove(1);
                        }

                        // Jika hanya 1 kategori → langsung redirect tanpa dropdown
                        if (data.data.length === 1) {
                            await redirectKategori(data.data[0].kategori_user_id);
                            return;
                        }

                        // Isi dropdown kategori
                        data.data.forEach(item => {
                            const option = new Option(item.kategori_user_id, item.kategori_user_id);
                            categorySelect.add(option);
                        });

                        showNotification('Silakan pilih kategori user Anda.', 2500);
                        setButtonLoading(false, 'Pilih kategori');
                    } else {
                        handleLoginError(data.remarks || 'NIK atau Password salah.');
                    }
                } catch (error) {
                    console.error('Login Error:', error);
                    handleLoginError('Terjadi kesalahan koneksi.');
                }
            }

            // === Pilih kategori user ===
            async function redirectKategori(categoryId) {
                setButtonLoading(true);

                try {
                    const response = await fetch(`/Login/CekKategoriUser?kategori_user_id=${encodeURIComponent(categoryId)}`);
                    if (!response.ok) throw new Error(`HTTP error: ${response.status}`);
                    const data = await response.json();

                    if (data.status && data.data) {
                        const redirectUrl = `/${data.data.login_controller}/${data.data.login_function}`;
                        window.location.href = redirectUrl;
                    } else {
                        handleLoginError(data.remarks || 'Gagal memilih kategori.');
                    }
                } catch (error) {
                    console.error('Category Error:', error);
                    handleLoginError('Gagal terhubung ke server.');
                }
            }

            function handleLoginError(message) {
                setButtonLoading(false);
                showNotification(message);
                loginContainer.classList.add('shake');
                setTimeout(() => loginContainer.classList.remove('shake'), 500);
            }

            // Listener
            form.addEventListener('submit', btnLogin);
            categorySelect.addEventListener('change', () => {
                const categoryId = categorySelect.value;
                if (categoryId) redirectKategori(categoryId);
            });
        });
    </script>
</body>
</html>

