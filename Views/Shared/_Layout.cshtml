                }
                <!-- 🟠 Admin Kontraktor -->
                var adminKonMenus = menuList
                .Where(m => (string)m.type == "AdminKon" && (m.hidden?.ToString()?.ToLower() == "false"))
                .ToList();
                if (adminKonMenus.Any())
                {
                    <hr class="sidebar-divider">
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseAdminKon">
                            <i class="fas fa-money-check-alt fa-fw"></i>
                            <span>System Integrations</span>
                        </a>
                        <div id="collapseAdminKon" class="collapse" data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                @foreach (var menu in adminKonMenus)
                                {
                                    <a class="collapse-item" href="@Url.Action((string)menu.link_function, (string)menu.link_controller)">
                                        @menu.title
                                    </a>
                                }
                            </div>
                        </div>
                    </li>
                }

                <!-- ⚙️ Master Menu -->
                var masterMenus = menuList
                .Where(m => (string)m.type == "Master" && (m.hidden?.ToString()?.ToLower() == "false"))
                .ToList();
                if (masterMenus.Any())
                {
                    <hr class="sidebar-divider">
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseMaster">
                            <i class="fas fa-cogs"></i>
                            <span class="sidebar-text">Master</span>
                        </a>
                        <div id="collapseMaster" class="collapse" data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                @foreach (var menu in masterMenus)
                                {
