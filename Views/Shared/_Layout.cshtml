        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal"><span>×</span></button>
                </div>
                <div class="modal-body">Apakah anda yakin logout dari sistem?</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="@Url.Action("Logout", "Login")">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- BARU: Modal Ganti Password -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="changePasswordForm">
                    <div class="modal-header">
                        <h5 class="modal-title" id="changePasswordModalLabel">Ganti Password</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span>×</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="oldPassword" class="font-weight-bold">Password Lama</label>
                            <input type="password" class="form-control" id="oldPassword" required>
                        </div>
                        <div class="form-group">
                            <label for="newPassword" class="font-weight-bold">Password Baru</label>
                            <input type="password" class="form-control" id="newPassword" required>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword" class="font-weight-bold">Konfirmasi Password Baru</label>
                            <input type="password" class="form-control" id="confirmPassword" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-light" type="button" data-dismiss="modal">Batal</button>
                        <button class="btn btn-primary" type="submit">Simpan Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- BARU: Modal Edit Foto Profil -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Edit Foto Profil</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span>×</span></button>
                </div>
                <div class="modal-body">
                    <p>Pilih gambar baru:</p>
                    <input type="file" id="profileImageInput" class="form-control-file" accept="image/*">
                    <hr>
                    <p class="font-weight-bold">Crop gambar (1:1):</p>
                    <div id="cropperImageContainer">
                        <img id="imageToCrop" style="display: none;">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-light" type="button" data-dismiss="modal">Batal</button>
                    <button class="btn btn-primary" id="saveProfileImageBtn">Simpan Foto</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- BARU: Alertify JS -->
    <script src="https://cdn.jsdelivr.net/npm/alertifyjs@1.14.0/build/alertify.min.js"></script>

    <!-- BARU: Cropper.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>

    <!-- BARU: Logika Kustom untuk Modal -->
    <script>
        $(document).ready(function () {

            // Atur default Alertify
            alertify.defaults.transition = "slide";
            alertify.defaults.theme.ok = "btn btn-primary";
            alertify.defaults.theme.cancel = "btn btn-light";
            alertify.defaults.theme.input = "form-control";

            // --- Logika Ganti Password ---
            $('#changePasswordForm').on('submit', function (e) {
                e.preventDefault();

                var oldPass = $('#oldPassword').val();
                var newPass = $('#newPassword').val();
                var confirmPass = $('#confirmPassword').val();

                if (newPass !== confirmPass) {
                    alertify.error('Password baru dan konfirmasi tidak cocok.');
                    return;
                }

                if (!oldPass || !newPass) {
                    alertify.error('Semua field harus diisi.');
                    return;
                }

                var data = {
                    OldPassword: oldPass,
                    NewPassword: newPass,
                    ConfirmPassword: confirmPass
                };

                // Tampilkan loading
                var saveBtn = $(this).find('button[type="submit"]');
                saveBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Menyimpan...');

                fetch('@Url.Action("ChangePassword", "UserLogin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        alertify.success(result.message);
                        $('#changePasswordModal').modal('hide');
                        $('#changePasswordForm')[0].reset();
                    } else {
                        alertify.error(result.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alertify.error('Terjadi kesalahan koneksi.');
                })
                .finally(() => {
                    // Kembalikan tombol
                    saveBtn.prop('disabled', false).html('Simpan Password');
                });
            });

            // --- Logika Edit Foto Profil ---
            var cropper;
            var image = document.getElementById('imageToCrop');
            var saveProfileBtn = $('#saveProfileImageBtn');

            $('#profileImageInput').on('change', function (e) {
                var files = e.target.files;
                if (files && files.length > 0) {
                    var reader = new FileReader();
                    reader.onload = function (event) {
                        image.src = event.target.result;
                        $(image).show();

                        if (cropper) {
                            cropper.destroy(); // Hancurkan instance lama
                        }

                        // Inisialisasi Cropper
                        cropper = new Cropper(image, {
                            aspectRatio: 1 / 1, // 1:1 untuk foto profil
                            viewMode: 1,
                            autoCropArea: 0.9,
                            responsive: true,
                            background: false,
                            zoomable: true,
                            movable: true
                        });

                        saveProfileBtn.prop('disabled', false);
                    };
                    reader.readAsDataURL(files[0]);
                }
            });

            // Reset cropper saat modal dibuka/ditutup
            $('#editProfileModal').on('show.bs.modal', function () {
                 saveProfileBtn.prop('disabled', true);
            });

            $('#editProfileModal').on('hidden.bs.modal', function () {
                if (cropper) {
                    cropper.destroy();
                }
                image.src = '';
                $(image).hide();
                $('#profileImageInput').val('');
                saveProfileBtn.prop('disabled', true);
            });

            // Tombol Simpan Foto
            saveProfileBtn.on('click', function () {
                if (!cropper) {
                    alertify.error('Silahkan pilih gambar terlebih dahulu.');
                    return;
                }

                $(this).prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Menyimpan...');

                // Dapatkan hasil crop sebagai base64
                var canvas = cropper.getCroppedCanvas({
                    width: 250, // Ukuran ideal foto profil
                    height: 250,
                    imageSmoothingQuality: 'high'
                });

                var base64ImageData = canvas.toDataURL('image/png');

                var data = {
                    ImageData: base64ImageData
                };

                fetch('@Url.Action("UpdateProfilePicture", "UserLogin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        alertify.success(result.message);

                        // Update gambar di topbar secara dinamis
                        // Tambah timestamp unik (?) untuk paksa browser refresh cache
                        $('#topbarUserImage').attr('src', result.newImagePath + '?t=' + new Date().getTime());

                        $('#editProfileModal').modal('hide');
                    } else {
                        alertify.error(result.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alertify.error('Terjadi kesalahan saat menyimpan foto.');
                })
                .finally(() => {
                    $(this).prop('disabled', false).html('Simpan Foto');
                });
            });

        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
