@using Microsoft.AspNetCore.Http
@{
    var namaUser = ViewContext.HttpContext.Session.GetString("nama") ?? "No Name";
    var kategoriUser = ViewContext.HttpContext.Session.GetString("kategori_user_id") ?? "No Kategori";

    // --- MODIFIKASI: Ambil path foto dari session ---
    var fotoUser = ViewContext.HttpContext.Session.GetString("profile_picture_path");
    if (string.IsNullOrEmpty(fotoUser))
    {
        fotoUser = "~/user.png"; // Default jika tidak ada di session atau DB
    }

    var menuList = ViewBag.Menu as IEnumerable<dynamic>;
    string pageTitle = string.IsNullOrWhiteSpace(ViewData["Title"]?.ToString())
        ? "ONEDB EVOLUTION"
        : $"{ViewData["Title"]} | ONEDB EVOLUTION";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="ONEDB Evolution Dashboard">
    <meta name="author" content="">

    <title>@pageTitle</title>

    <!-- Fonts & Icons -->
    <!-- Hapus Roboto, ganti ke Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- Styles -->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/alertifyjs@1.14.0/build/css/alertify.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/default.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <!-- BARU: CSS untuk Cropper.js -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" />

    @RenderSection("styles", required: false)

    <!-- MODIFIKASI: Style Modern -->
    <style>
        body {
            font-family: 'Poppins', sans-serif; /* Gunakan Poppins */
            background-color: #f4f7fc; /* Latar belakang abu-abu lembut */
            color: #333;
            font-size: 0.9rem; /* Sedikit lebih kecil agar rapi */
        }

        /* Sidebar */
        .sidebar {
            position: relative;
            background: url('/img/walpaper.jpg') no-repeat center center;
            background-size: cover;
            z-index: 1;
        }

            .sidebar::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.65);
                z-index: -1;
            }

            .sidebar .nav-item .nav-link {
                font-weight: 500; /* Sedikit lebih tipis dari bold */
                font-size: 0.95rem; /* Sesuaikan */
                color: white !important;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5); /* Shadow lebih halus */
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 12px 15px;
                transition: all 0.3s ease-in-out;
            }

                .sidebar .nav-item .nav-link i {
                    font-size: 1rem; /* Sesuaikan */
                    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
                }

                .sidebar .nav-item .nav-link:hover {
                    background: rgba(255, 255, 255, 0.15); /* Hover lebih soft */
                    border-radius: 5px;
                    box-shadow: none; /* Hilangkan shadow aneh */
                    transform: translateY(-2px);
                }

            .sidebar .collapse-item {
                font-weight: 500;
                font-size: 0.9rem;
                color: #555; /* Kontras lebih baik di bg putih */
                padding: 8px 15px;
                display: block;
                text-decoration: none;
                transition: all 0.3s ease-in-out;
            }

                .sidebar .collapse-item:hover {
                    color: #000;
                    background-color: #f0f0f0; /* Hover abu-abu */
                    border-radius: 4px;
                    text-shadow: none;
                }

        .topbar {
            background-color: #ffffff;
            /* Hapus shadow kustom, akan pakai class 'shadow-sm' */
        }

        .led-clock {
            font-family: 'Courier New', Courier, monospace;
            font-size: 1.1rem;
            letter-spacing: 2px;
        }

        /* BARU: Modernisasi Card (untuk @RenderBody ) */
        .card {
            border: none;
            border-radius: 0.5rem; /* Sudut lebih bulat */
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.05);
            margin-bottom: 1.5rem;
        }

        /* BARU: Modernisasi Modal */
        .modal-content {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        }

        /* BARU: Container untuk Cropper */
        #cropperImageContainer {
            width: 100%;
            height: 400px;
            overflow: hidden;
            background-color: #f7f7f7;
            border-radius: 0.5rem;
        }

            #cropperImageContainer img {
                max-width: 100%;
            }

    </style>
</head>

<body id="page-top">
